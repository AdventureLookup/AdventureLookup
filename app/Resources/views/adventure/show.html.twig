{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="my-5">{{ adventure.title }}</h1>

                <table class="table">
                    <tbody>
                    {% for info in adventure.info %}
                    <tr {% if not info.approved %}class="table-warning"{% endif %}>
                        <th>{{ info.tag.title }}</th>
                        <td>
                            {{ info.content }}
                            <a class="btn btn-sm btn-secondary" href="{{ path('adventure_info_edit', {id: info.id}) }}">edit</a>
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot>
                    <tr>
                        <th>Add information</th>
                        <td>
                            <a class="btn btn-info btn-sm" href="{{ path('adventure_info_new', {id: adventure.id}) }}">Add info</a>
                        </td>
                    </tr>
                    </tfoot>
                </table>

                <h3 class="mt-3">Other actions</h3>
                <ul>
                    <li>
                        <a href="{{ path('adventure_index') }}">Back to the list</a>
                    </li>
                    <li>
                        <a href="{{ path('adventure_edit', { 'id': adventure.id }) }}">Edit</a>
                    </li>
                    <li>
                        {{ form_start(delete_form) }}
                        <input class="btn btn-sm btn-danger" type="submit" value="Delete">
                        {{ form_end(delete_form) }}
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
