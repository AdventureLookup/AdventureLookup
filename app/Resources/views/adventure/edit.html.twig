{% extends 'base.html.twig' %}

{% block body %}
    <div class="container" id="page--edit-adventure" data-similar-titles-url="{{ path('similar_titles_search') }}" data-search-url="{{ path('api_autocomplete_field', {fieldName: '__FIELD__'}) }}">
        <div class="row">
            <div class="col">
                <div class="adl-sidebar">
                    <div class="content">
                        <a class="no-underline" href="{{ path('adventure_index') }}">
                            <div class="sidebar-title-big">A</div>
                        </a>

                        <a class="no-underline" href="{{ path('adventure_show', { slug: adventure.slug }) }}">
                            <div class="sidebar-title-big-secondary"><i class="fa fa-arrow-left"></i></div>
                        </a>
                    </div>
                </div>
            </div>
            <div id="adventure-container" class="col-11">
                <div class="title">Edit adventure</div>

                {{ form_start(form) }}

                {% include 'adventure/_form.html.twig' %}

                <input type="submit" value="Save Changes" class="btn btn-primary" role="button" />
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    {% include 'adventure/_new_content_modal.html.twig' %}
{% endblock %}
