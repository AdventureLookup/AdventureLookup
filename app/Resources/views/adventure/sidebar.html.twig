<div id="adl-sidebar">
    <div class="content">
        <div class="title">Adventure Lookup</div>
    </div>


    <input type="button" id="adventure-suggest-edit" class="btn btn-secondary" value="Suggest Edits" />
    <input type="button" id="adventure-report-issue" class="btn btn-secondary" value="Report Issue" />

    {% if is_granted('edit', adventure) %}
        <a class="btn btn-sm btn-secondary mr-2"
           href="{{ path('adventure_edit', { 'id': adventure.id }) }}">
            <i class="fa fa-edit"></i> Edit adventure
        </a>
    {% endif %}
    {% if is_granted('delete', adventure) %}
        {{ form_start(delete_form) }}
        <button class="btn btn-sm btn-outline-danger"
                onclick="return confirm('Do you really want to delete this adventure?')">
            <i class="fa fa-trash"></i> Delete
        </button>
        {{ form_end(delete_form) }}
    {% endif %}
</div>