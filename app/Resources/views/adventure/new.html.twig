{% extends 'base_with_collapsed_sidebar.html.twig' %}

{% block body %}
    {{ parent() }}
    {% include 'adventure/_new_content_modal.html.twig' %}
{% endblock %}

{% block content_without_container %}
    <div class="adventure-container"  id="page--create-adventure"
        data-similar-titles-url="{{ path('similar_titles_search') }}"
        data-search-url="{{ path('api_autocomplete_field', {fieldName: '__FIELD__'}) }}">
        <div class="title">New adventure</div>
        <div class="alert alert-warning">AdventureLookup is for D&D and its clones. Not other systems/genres.</div>
        <div class="content">

            {{ form_start(form) }}

            {% include 'adventure/_form.html.twig' %}

            <input type="submit" value="Save" class="btn btn-primary" role="button" />
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}